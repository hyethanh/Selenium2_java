<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite configfailurepolicy="continue" name="Browser Suite">
    <listeners>
        <listener class-name="com.auto.testng.TestListener"/>
    </listeners>

    <test name="Sanity tests">
        <parameter name="platform" value="chrome"/>
        <classes>
            <class name="com.auto.test.sanity.LoginPageTest"/>
            <class name="com.auto.test.sanity.LoginPageNegativeTest"/>
        </classes>
    </test>
    <test name="MainPage tests">
        <parameter name="platform" value="chrome"/>
        <classes>
            <class name="com.auto.test.mainpage.AddPageTest"/>
            <class name="com.auto.test.mainpage.DeletePageTest"/>
            <class name="com.auto.test.mainpage.EditPageTest"/>
        </classes>
    </test>
    <test name="Panel Test">
        <parameter name="platform" value="chrome"/>
        <classes>
        <class name="com.auto.test.panel.PanelTest"/>
        <class name="com.auto.test.panel.PanelConfigurationTest"/>
        </classes>
    </test>
    <test name="Data Profiles Test">
        <parameter name="platform" value="chrome"/>
        <classes>
            <class name="com.auto.test.dataprofiles.DataProfileTest"/>
        </classes>
    </test>
</suite>
